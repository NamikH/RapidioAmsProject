@model AMS.Models.Payments

@{
    ViewData["Title"] = "Create";
}

    <div class="row">
        <div class="col-md-12">
            <ol class="breadcrumb">
                <li class="active">
                    Əməluyyatlar
                </li>
                <li class="active">
                    Kassa əməliyyatları
                </li>
                <li class="active">
                    Ödənişlər
                </li>
                <li class="active">
                    Ödəniş et
                </li>
            </ol>
        </div>
    </div>


<div class="panel-white">
    <div class="panel-heading"  style="margin-bottom:-3%;padding-top:0%;">
        <div class="panel-body">
            <h2>Ödənişlər</h2>
        </div>
    </div>
    <div class="panel-body">
        @*<form method="post" asp-action="PaymentCreate">*@
        <form method="post" asp-action="PaymentCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="col-md-6">
                    <label asp-for="Amount" class="control-label">Məbləğ</label>
                    <input asp-for="Amount" class="form-control currency" autocomplete="off" type="number" step="0.01" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Explanation" class="control-label">Açıqlama</label>
                    <input asp-for="Explanation" class="form-control" autocomplete="off"/>
                    <span asp-validation-for="Explanation" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-6">
                    <label asp-for="CashId" class="control-label">Kassa</label>
                    <select asp-for="CashId" class="form-control selectpicker" data-live-search="true" asp-items="ViewBag.CashId"></select>
                </div>
                <div class="col-md-6">
                    <label asp-for="ContractDetailId" class="control-label">Xidmət növü</label>
                    <select asp-for="ContractDetailId" class="form-control selectpicker" data-live-search="true" asp-items="ViewBag.ContractDetailId"></select>
                </div>
            </div>
            
            <div class="form-group mb-0">
                <div class="col-md-6">
                    <div><button type="submit" class="btn btn-primary waves-effect waves-light mr-1">Yadda saxla</button> <button type="reset" class="btn btn-secondary waves-effect" onclick="location.href='@Url.Action("CashOperation","Payments")'">Ana səifə</button></div>
                </div>
            </div>
        </form>
    </div>
</div>


<div hidden>
    <!-- end: TOOLBAR -->
    <!-- end: PAGE HEADER -->
    <!-- start: BREADCRUMB -->
    <!-- end: BREADCRUMB -->
    <!-- start: PAGE CONTENT -->
    <div class="panel-white" hidden>
        <div class="panel-body">


            <form>

                <div class="form-group">
                    <label class="control-label">Əməliyyat növün seçin</label>
                    <select id="dropdown" class="form-control selectpicker" data-live-search="true" name="dropdown" onchange="Check(this)">
                        <option value="1">Ödənişlər</option>
                        <option value="2">Məxaric</option>
                        <option value="3">Mədaxil</option>
                    </select>
                </div>
            </form>
