    ViewData["Title"] = "Index";
}

    <style>
        thead input {
            width: 100%;
        }
    </style>

<!-- end: TOOLBAR -->
<!-- end: PAGE HEADER -->
<!-- start: BREADCRUMB -->
<div class="row">
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li class="active">
                Tənzimləmələr
            </li>
            <li class="active">
                Müştəri parametrləri
            </li>
            <li class="active">
                Müştəri tipi
            </li>
