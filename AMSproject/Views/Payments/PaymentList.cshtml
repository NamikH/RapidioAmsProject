@model IEnumerable<AMS.Models.PaymentsList>

@{
    ViewData["Title"] = "Index";
}






@{ int rowNo = 0;}

    <div class="row">
        <div class="col-md-12">
            <ol class="breadcrumb">
                <li class="active">
                    Əməliyyatlar
                </li>
                <li class="active">
                    Kassa əməliyyatları
                </li>
                <li class="active">
                    Ödənişlər
                </li>
            </ol>
        </div>
    </div>



<div class="panel panel-white">
    <div class="panel-heading">


        <h2>Ödənişlər</h2>
        <div class="panel-tools">
            <div class="dropdown">
                <a data-toggle="dropdown" class="btn btn-xs dropdown-toggle btn-transparent-grey">
                    <i class="fa fa-cog"></i>
                </a>
                <ul class="dropdown-menu dropdown-light pull-right" role="menu">
                    <li>
                        <a class="panel-expand" href="#">
                            <i class="fa fa-expand"></i> <span>Fullscreen</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>


    <div class="panel-body">
        <div class="table-responsive table-responsive-lg table-responsive-md table-responsive-sm table-responsive-xl" style="margin-bottom:0%" ;>
            <table class="table table-bordered table-hover display table-striped" id="example" style="width:99.8%">
                @*<table id="datatable" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse !important; border-spacing: 0 !important; width: 100% !important;">*@
                <thead>
                    <tr>
                        <th>
                            №
                        </th>
                        <th>Obyekt №</th>
                        <th>Xidmət növü</th>
                        <th>Balans</th>
                        <th>Aylıq xidmət haqqı</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @(rowNo += 1)
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.ObjNumber)</td>
                            <td>@Html.DisplayFor(modelItem => item.SpDefenition)</td>
                            <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                            <td>@Html.DisplayFor(modelItem => item.MonthDept)</td>
                            <td>
                                <a href="@Url.Action("PaymentCreate","Payments" , new {contractdetailid= item.ContractDetailId,customersId = item.CustomersId,supporttype = item.SupportTypeId})" style="color:#4a21c5 !important">Ödəniş et</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="panel-footer">
        <div class="form-group mb-0">
            <div> <button type="reset" class="btn btn-primary waves-effect" onclick="location.href='@Url.Action("CashOperation","Payments")'">Ana səifə</button></div>
        </div>
    </div>
</div>


