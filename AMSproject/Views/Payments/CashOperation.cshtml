<div id="costCreatte">
    <div class="panel-white">
        <div class="panel-heading" style="margin-bottom:-3%;padding-top:0%;">
            <div class="panel-body">
                <h2>Xərclər</h2>
            </div>
        </div>
        <div class="panel-body">
            <form asp-action="CostCreate" name="myForm" onsubmit="return validateForm()">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <div class="col-md-6">
                            <label asp-for="Amount" class="control-label" required>Məbləğ</label>
                            <input asp-for="Amount" class="form-control" autocomplete="off" type="number" step="0.01" />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Explanation" class="control-label">Kimə</label>
                            <input asp-for="Explanation" value=" " class="form-control" autocomplete="off" />
                            <span asp-validation-for="Explanation" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6">
                            <label asp-for="Explanation2" class="control-label">Nə üçün</label>
                            <input asp-for="Explanation2" value=" " class="form-control" autocomplete="off" />
                            <span asp-validation-for="Explanation2" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Explanation3" class="control-label">Sənəd №</label>
                            <input asp-for="Explanation3" value=" " class="form-control" autocomplete="off" />
                            <span asp-validation-for="Explanation3" class="text-danger"></span>
                        </div>
                    </div>
                <div class="form-group">
                    <div class="col-md-6">
                        <label asp-for="CashId" class="control-label">Kassa</label>
                        <select asp-for="CashId" class="form-control selectpicker" data-live-search="true" asp-items="ViewBag.CashId"></select>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="CostTypeId" class="control-label">Məxaric növü</label>
                        <select asp-for="CostTypeId" class="form-control selectpicker" data-live-search="true" asp-items="ViewBag.CostTypeId"></select>
                    </div>
                </div>
                <div class="form-group mb-0">
                    <div class="col-md-4 panel-body">
                        <div><button type="submit" class="btn btn-primary waves-effect waves-light mr-1 ">Yadda saxla</button> </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div id="incomeCreate">
    <div class="panel-white">
        <div class="panel-heading" style="margin-bottom:-3%;padding-top:0%;">
            <div class="panel-body">
                <h3>Mədaxil</h3>
            </div>
        </div>
        <div class="panel-body">
            <form asp-action="IncomeCreate" name="myForm" onsubmit="return validateForm()">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <div class="col-md-6">
                        <label asp-for="Amount" class="control-label" required>Məbləğ</label>
                        <input asp-for="Amount" class="form-control" autocomplete="off" type="number" step="0.01" />
                        @*<input type="number" placeholder="1.0" step="0.01" min="0" max="10">*@
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Explanation" class="control-label">Kimdən</label>
                        <input asp-for="Explanation" value=" " class="form-control" autocomplete="off" />
                        <span asp-validation-for="Explanation" class="text-danger"></span>
                    </div>               
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        <label asp-for="Explanation2" class="control-label">Nə üçün</label>
                        <input asp-for="Explanation2" value=" " class="form-control" autocomplete="off" />
                        <span asp-validation-for="Explanation2" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Explanation3" class="control-label">Sənəd №</label>
                        <input asp-for="Explanation3" value=" " class="form-control" autocomplete="off" />
                        <span asp-validation-for="Explanation3" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        <label asp-for="CashId" class="control-label">Kassa</label>
                        <select asp-for="CashId" class="form-control selectpicker" data-live-search="true" asp-items="ViewBag.CashId"></select>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="IncomeTypeId" class="control-label">Mədaxil növü</label>
                        <select asp-for="IncomeTypeId" class="form-control selectpicker" data-live-search="true" asp-items="ViewBag.IncomeTypeId"></select>
                    </div>
                </div>
                <div class="form-group mb-0">
                    <div class="panel-body">
                        <div><button type="submit" class="btn btn-primary waves-effect waves-light mr-1 ">Yadda saxla</button> </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div id="paymentCreatte">
    
    
<div class="panel-white">
    
        <div class="panel-heading">
            <h3>Ödənişlər</h3>
            @Html.Raw(ViewBag.Error)
        </div>
        <div class="panel-body">
            <form method="get" asp-action="PaymentList">
                <div class="form-group">
                    <label asp-for="ContractDetail.Contract.Customers.Id" class="control-label">Müştəri seç</label>
                    <select asp-for="ContractDetail.Contract.Customers.Id" name="CustomersId" class="form-control selectpicker" data-live-search="true" asp-items="ViewBag.CustomersId"></select>
                </div>
                <div class="form-group mb-0">
                    <div><button type="submit" class="btn btn-primary waves-effect waves-light mr-1">Axtar</button> </div>
                </div>
            </form>
        </div>
    
</div>
</div>

<script>

    function Check(sel) {

        if (sel.options[sel.selectedIndex].text == "Ödənişlər") {
            document.getElementById("paymentCreatte").style.display = "block";
            document.getElementById("costCreatte").style.display = "none";
            document.getElementById("incomeCreate").style.display = "none"
        }
        if (sel.options[sel.selectedIndex].text == "Məxaric") {
            document.getElementById("costCreatte").style.display = "block";
            document.getElementById("paymentCreatte").style.display = "none";
            document.getElementById("incomeCreate").style.display = "none"
        }
        if (sel.options[sel.selectedIndex].text == "Mədaxil") {
            document.getElementById("incomeCreate").style.display = "block"
            document.getElementById("costCreatte").style.display = "none";
            document.getElementById("paymentCreatte").style.display = "none";

        }
    }
</script>


